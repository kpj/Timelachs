<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical" >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/lib/com.sothree.slidinguppanel"
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        sothree:collapsedHeight="40dp" >

        <SurfaceView
            android:id="@+id/cam_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

        </SurfaceView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pull here for more options"/>

            <Button
                android:id="@+id/start_butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"/>

            <Button
                android:id="@+id/stop_butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"/>

            <EditText
                android:id="@+id/ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192.168.1.2"/>

            <EditText
                android:id="@+id/port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50505"/>

            <Button
                android:id="@+id/connect_butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"/>

            <Button
                android:id="@+id/disconnect_butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnect"/>

            <EditText
                android:id="@+id/interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"/>

        </LinearLayout>

     </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</LinearLayout>
